<lib>
	<Label libName="Label"
		   text="text"
		   color="0xffffff"
		   fontSize="46"
		   fontWeight="bold"
		   x="100"
		   y="100" />
	<TextInput libName="TextInput"
			   backgroundSkin="bg-input[40,80]"
			   prompt="Plase Input"
               promptColor="0x333333"
               padding="10"
