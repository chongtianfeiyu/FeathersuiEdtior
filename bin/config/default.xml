				  label="Label"
				  isSelected="false"
				  defaultSkin="tab-up[60,60,100,100]"
				  defaultSelectedSkin="tab-down[60,60,100,100]"
				  fontSize="70"
				  color="0xffffff"
				  x="100"
				  y="100" />
